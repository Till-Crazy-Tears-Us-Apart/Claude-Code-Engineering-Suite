{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Read|Glob|Grep|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONIOENCODING=\"utf-8\"; python \"$CLAUDE_PROJECT_DIR/hooks/pre_tool_guard.py\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONIOENCODING=\"utf-8\"; python \"$CLAUDE_PROJECT_DIR/hooks/env_enforcer.py\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONIOENCODING=\"utf-8\"; python \"$CLAUDE_PROJECT_DIR/hooks/context_manager.py\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "export PYTHONIOENCODING=\"utf-8\"; python \"$CLAUDE_PROJECT_DIR/hooks/context_manager.py\""
          }
        ]
      }
    ]
  },
  "outputStyle": "engineer-professional",
  "spinnerTipsEnabled": true
}
