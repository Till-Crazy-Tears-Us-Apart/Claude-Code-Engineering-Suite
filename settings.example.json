{
  "env": {
    "GEMINI_API_KEY": "YOUR_API_KEY_HERE",
    "GEMINI_MODEL": "gemini-3-flash-preview",
    "GEMINI_MAX_WORKERS": "5",
    "GEMINI_BASE_URL": "https://generativelanguage.googleapis.com/v1beta",
    "GEMINI_RETRY_LIMIT": "3",
    "GEMINI_TIMEOUT": "60"
  },
  "permissions": {
    "allow": [
      "Skill(code-modification)",
      "Skill(systematic-debugging)",
      "Skill(test-driven-development)",
      "Skill(receiving-feedback)",
      "Skill(auditor)",
      "Skill(file-ops)",
      "Skill(tool-guide)",
      "Skill(doc-updater)",
      "Skill(writing-skills)",
      "Skill(deep-plan)",
      "Skill(milestone)",
      "Skill(log-change)",
      "Skill(update-tree)",
      "Skill(update-logic-index)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Read|Glob|Grep|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/pre_tool_guard.py\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/env_system/enforcer_hook.py\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/context_manager.py\""
          },
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/context_manager.py\""
          },
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ]
  },
  "outputStyle": "python-architect",
  "spinnerTipsEnabled": true
}
