{
  "env": {
    "OPENAI_API_KEY": "YOUR_API_KEY_HERE",
    "OPENAI_MODEL": "glm-5",
    "OPENAI_MAX_WORKERS": "3",
    "OPENAI_BASE_URL": "https://coding.dashscope.aliyuncs.com/v1/chat/completions",
    "OPENAI_RETRY_LIMIT": "3",
    "OPENAI_TIMEOUT": "60",
    "OPENAI_MAX_TOKENS": "8192",
    "LOGIC_INDEX_AUTO_INJECT": "ALWAYS",
    "LOGIC_INDEX_FILTER_SMALL": "false",
    "REPO_AUDIT_ROOT": "~/claude_audit"
  },
  "permissions": {
    "allow": [
      "Skill(code-modification)",
      "Skill(systematic-debugging)",
      "Skill(test-driven-development)",
      "Skill(receiving-feedback)",
      "Skill(auditor)",
      "Skill(file-ops)",
      "Skill(tool-guide)",
      "Skill(doc-updater)",
      "Skill(writing-skills)",
      "Skill(deep-plan)",
      "Skill(milestone)",
      "Skill(log-change)",
      "Skill(update-tree)",
      "Skill(read-logic-index)",
      "Skill(update-logic-index)",
      "Skill(repo-audit)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Read|Glob|Grep|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/pre_tool_guard.py\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/env_system/enforcer_hook.py\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/context_manager.py\""
          },
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/context_manager.py\""
          },
          {
            "type": "command",
            "command": "python \"~/.claude/hooks/tree_system/lifecycle_hook.py\""
          }
        ]
      }
    ]
  },
  "outputStyle": "python-architect",
  "spinnerTipsEnabled": true
}
